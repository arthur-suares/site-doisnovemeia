generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://doisnovemeia-user:doisnovemeia123@<HOST>:5432/doisnovemeia-db"
}

model user {
  id            String   @id @default(dbgenerated("gen_random_uuid()"))
  name          String
  email         String   @unique
  password      String     
  createdAt     DateTime @default(now())
}

model postagem {
  id            String      @id @default(dbgenerated("gen_random_uuid()"))
  title         String  
  imagem        Bytes
  description   String
}
